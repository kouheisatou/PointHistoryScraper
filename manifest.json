{
	"manifest_version": 3,
	"name": "楽天ポイント履歴一括保存",
	"version": "1.0.0",
	"description": "楽天PointClubのポイント履歴をCSV形式で一括保存",
	"action": {
		"default_title": "RakutenPointHistoryDumper",
		"default_popup": "popup.html"
	},
	"permissions": [
		"tabs"
	],
	"content_scripts": [
		{
			"matches": [
				"https://point.rakuten.co.jp/history/*"
			],
			"js": [
				"content.js"
			]
		}
	],
	"icons": {
		"128": "icon.png"
	}
}